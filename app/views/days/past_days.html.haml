= form_for(@month, url: add_days_path(), :html => {class: "form-inline"})  do |f|
  %p.form
  = f.fields_for :days do |builder|
    = render "day_fields", :f => builder
  %p
    = link_to_add_fields "<span class=\"glyphicon glyphicon-plus-sign\"></span> Add Day".html_safe, f, :days
  = label :days, :reason, 'Reason for inputting past days:'
  = text_field :days, :reason, :required => "required"
  
  %p 
    = show_simple_captcha(:label => "Enter before submitting", :placeholder => "", :refresh_button_text => "Refresh text")
    %br
    = f.submit 'Submit', :class => 'submit btn'