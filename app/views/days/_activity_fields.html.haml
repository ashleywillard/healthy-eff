%div.activity_container
  %p.activity.field
    = f.label :name, 'Activity: ', :class => 'activity_label'
    = f.text_field :name, :placeholder  => 'ex. Running'
    = f.label :duration, 'Duration (in minutes)*: ', :class => 'activity_label'
    = f.number_field :duration, :placeholder => 'ex. 30'
    = link_to_function "(-)", "remove_fields(this)"
    / %i.glyphicon.glyphicon-minus-sign
