%div.day.field
  = f.label :date, 'On'
  = f.text_field :date, :placeholder => 'mm/dd/yyyy', 'data-provide' => "datepicker", 'data-date-format' => "mm/dd/yyyy", 'data-date-start-date' => "#{@start_date.strftime("%m/%d/%Y")}", 'data-date-end-date' => "#{@end_date.strftime("%m/%d/%Y")}", 'data-date-dates-disabled' => @previously_inputted, :class => 'datepicker', autocomplete: "off", :required => "required"
  = link_to_function "<span class=\"glyphicon glyphicon-minus-sign\"</span>".html_safe, "remove_fields(this)", :class => "remove_day"
  %br
  %br
  = f.fields_for :activities do |builder|
    = render "activity_fields", :f => builder
  %p
    = link_to_add_fields "<span class=\"glyphicon glyphicon-plus-sign\"</span>".html_safe, f, :activities