= form_for @day, url: add_today_path() do |f|
  %p.form
    Healthy Activity Form
    %br
  %div.today.field
    = f.label :date, "Today #{@date.strftime("%m/%d/%Y")}"
    = f.hidden_field :date, value: @date
    = f.fields_for :activities do |builder|
      = render "activity_fields", :f => builder
    %p
      = link_to_add_fields "Add Activity", f, :activities
  %p 
    = show_simple_captcha(:label => "Enter before submitting", :placeholder => "", :refresh_button_text => "Refresh text")
    = hidden_field :days, :reason, value: "none"
    = f.submit 'Submit'
= link_to "I need to go back and input past days", past_days_path
%span.glyphicon.glyphicon-minus-sign
%i.fa.fa-minus-circle
