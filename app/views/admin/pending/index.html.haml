-#  app/views/admin/pending.html.haml
%h1 Activities Pending Approval

= form_tag admin_update_pending_path, :method => :put
%table#pending.table.table-striped
  %thead
    %tr
      %th{:style => "text-align:center"} Select
      %th First Name
      %th Last Name
      %th Date
      %th Reason
  %tbody
    - @days.each do |day|
      %tr
        %td{:style => "text-align:center"}= check_box_tag "selected[]", day.id
        %td= day.user.first_name
        %td= day.user.last_name
        %td= day.get_date_in_correct_timezone.strftime("%m/%d/%Y")
        %td= day.reason

%p
= submit_tag 'Approve', :class => "btn btn-success"
= submit_tag 'Deny', :class => "btn btn-danger"
