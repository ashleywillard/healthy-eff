#!/bin/sh

# Ensure that RoR is installed
command -v ruby >/dev/null 2>&1 || {
  echo >&2 "ERROR: Ruby is not installed.";
  exit 1;
}
command -v rails >/dev/null 2>&1 || {
  echo >&2 "ERROR: Rails is not installed.";
  exit 1;
}

# Set up application dependencies
bundle install

# Set up database
bundle exec rake db:setup
